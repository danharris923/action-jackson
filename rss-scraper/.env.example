# RSS Configuration
# Comma-separated list of RSS feed URLs to scrape
RSS_SOURCES=https://site1.com/feed,https://site2.com/feed

# Affiliate Tags
# Amazon US affiliate tag 
AMAZON_TAG_US=mytag-20
# Amazon Canada affiliate tag
AMAZON_TAG_CA=mytagca-20

# Feature Flags
# Enable Playwright for JavaScript-heavy pages (true/false)
USE_PLAYWRIGHT=false
# Maximum retry attempts for failed requests
MAX_RETRIES=3

# Output Configuration
# Path to generated JSON file
OUTPUT_JSON=data/deals.json

# Vercel Deployment (for CI/CD)
# Get these from Vercel dashboard
VERCEL_TOKEN=your_token_here
VERCEL_PROJECT_ID=your_project_id
VERCEL_ORG_ID=your_org_id

# Development Environment
# Python environment (development/production)
ENVIRONMENT=development