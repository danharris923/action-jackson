{
  "version": 2,
  "name": "action-jackson",
  "framework": "nextjs",
  "buildCommand": "cd rss-scraper && npm run build",
  "outputDirectory": "rss-scraper/.next",
  "installCommand": "cd rss-scraper && npm install",
  "devCommand": "cd rss-scraper && npm run dev",
  "build": {
    "env": {
      "PYTHONPATH": "./rss-scraper/scraper"
    }
  },
  "functions": {
    "rss-scraper/scraper/main.py": {
      "runtime": "python3.9",
      "maxDuration": 300
    }
  },
  "rewrites": [
    {
      "source": "/api/scrape",
      "destination": "/rss-scraper/scraper/main.py"
    },
    {
      "source": "/data/deals.json",
      "destination": "/rss-scraper/data/deals.json"
    }
  ],
  "headers": [
    {
      "source": "/data/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, stale-while-revalidate=60"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],
  "regions": ["iad1", "sfo1"],
  "github": {
    "enabled": false
  }
}